@using WebApplication1.Models.People
@model WebApplication1.Models.People.PeopleViewModel;

<form method="post">
    <label>Search</label>
    <input type="text" name="searchTerm" />
    <input type="submit" />
</form>

<h3>Create Person</h3>
<form asp-action="Create" method="post">
    <label>Person Name</label>
    <input type="text" name="PersonName" />
    <label>Phone Number</label>
    <input type="tel" name="PersonPhoneNumber" />
    <label>City</label>
    <input type="text" name="PersonCity" />
    <input type="submit" />
</form>

<p>@TempData["Message"]</p>

<partial name="_Person.cshtml"/>


